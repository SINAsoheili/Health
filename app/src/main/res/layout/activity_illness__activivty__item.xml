<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.sinasoheili.view.Illness_Activivty_Item">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/Illness_Activity_Item_Radius"
            android:layout_marginRight="@dimen/Illness_Activity_Item_MarginRight"
            android:layout_marginLeft="@dimen/Illness_Activity_Item_MarginLeft"
            android:layout_marginTop="@dimen/Illness_Activity_Item_MarginTop"
            android:layout_marginBottom="@dimen/Illness_Activity_Item_MarginBottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Illness_Activity_tv_name_en"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:textSize="@dimen/Illness_Activity_Item_TextSize"
                    android:textColor="@color/Illness_Activity_Item_TextColor"
                    android:textStyle="italic"
                    />

                <TextView
                    android:id="@+id/Illness_Activity_tv_name_fa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:textSize="@dimen/Illness_Activity_Item_TextSize"
                    android:textColor="@color/Illness_Activity_Item_TextColor"
                    android:textStyle="bold"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/Illness_Activity_Item_Radius"
            android:layout_marginRight="@dimen/Illness_Activity_Item_MarginRight"
            android:layout_marginLeft="@dimen/Illness_Activity_Item_MarginLeft"
            android:layout_marginTop="@dimen/Illness_Activity_Item_MarginTop"
            android:layout_marginBottom="@dimen/Illness_Activity_Item_MarginBottom">

            <TextView
                android:id="@+id/Illness_Activity_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="@dimen/Illness_Activity_Item_TextSize"
                android:textColor="@color/Illness_Activity_Item_TextColor"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
