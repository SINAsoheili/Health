<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/MedicationSchedule_All_ListItem_edit_btn"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="0.4"
        android:layout_margin="4dp"
        android:gravity="center"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/MedicationSchedule_All_ListItem_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ساعت"
        android:textSize="@dimen/MedicationSchedule_ListItem_TextSize"
        android:textColor="@color/MedicationSchedule_ListItem_text"
        android:layout_margin="4dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/MedicationSchedule_All_ListItem_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="مقدار"
        android:textSize="@dimen/MedicationSchedule_ListItem_TextSize"
        android:textColor="@color/MedicationSchedule_ListItem_text"
        android:layout_margin="4dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/MedicationSchedule_All_ListItem_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="نام دارو"
        android:textSize="@dimen/MedicationSchedule_ListItem_TextSize"
        android:textColor="@color/MedicationSchedule_ListItem_text"
        android:layout_margin="4dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/MedicationSchedule_All_ListItem_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="روز"
        android:textSize="@dimen/MedicationSchedule_ListItem_TextSize"
        android:textColor="@color/MedicationSchedule_ListItem_text"
        android:layout_margin="4dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>