<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/DashboardPageLayout_CardView_Medicine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/Dashboard_CardView_Margin"
                app:cardCornerRadius="@dimen/Dashboard_CardView_redius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="@dimen/Dashboard_ImageView_Width"
                        android:layout_height="@dimen/Dashboard_ImageView_Height"
                        android:src="@drawable/medicine"
                        android:scaleType="fitXY"
                        android:padding="@dimen/Dashboard_ImageView_Padding"
                        />

                    <Button
                        android:id="@+id/Dashboard_btn_medicine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="@color/Home_Page_Layout_CardView_Title"
                        android:text="@string/Dashboard_btn_medicine"
                        android:textSize="@dimen/HomePageLayout_CardView_Title_TextSize"
                        android:clickable="false"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/DashboardPageLayout_CardView_Illness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/Dashboard_CardView_Margin"
                app:cardCornerRadius="@dimen/Dashboard_CardView_redius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="@dimen/Dashboard_ImageView_Width"
                        android:layout_height="@dimen/Dashboard_ImageView_Height"
                        android:src="@drawable/illness"
                        android:scaleType="fitXY"
                        android:padding="@dimen/Dashboard_ImageView_Padding"
                        />

                    <Button
                        android:id="@+id/Dashboard_btn_illness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="@color/Home_Page_Layout_CardView_Title"
                        android:text="@string/Dashboard_btn_illness"
                        android:textSize="@dimen/HomePageLayout_CardView_Title_TextSize"
                        android:clickable="false"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/DashboardPageLayout_CardView_BloodGlucose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/Dashboard_CardView_Margin"
                app:cardCornerRadius="@dimen/Dashboard_CardView_redius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="@dimen/Dashboard_ImageView_Width"
                        android:layout_height="@dimen/Dashboard_ImageView_Height"
                        android:src="@drawable/blood_glucose"
                        android:scaleType="fitXY"
                        android:padding="@dimen/Dashboard_ImageView_Padding"
                        />

                    <Button
                        android:id="@+id/Dashboard_btn_bloodGlucose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="@color/Home_Page_Layout_CardView_Title"
                        android:text="@string/Dashboard_btn_bloodGlucose"
                        android:textSize="@dimen/HomePageLayout_CardView_Title_TextSize"
                        android:clickable="false"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/DashboardPageLayout_CardView_BloodPressure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/Dashboard_CardView_Margin"
                app:cardCornerRadius="@dimen/Dashboard_CardView_redius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="@dimen/Dashboard_ImageView_Width"
                        android:layout_height="@dimen/Dashboard_ImageView_Height"
                        android:src="@drawable/blood_pressure"
                        android:scaleType="fitXY"
                        android:padding="@dimen/Dashboard_ImageView_Padding"
                        />

                    <Button
                        android:id="@+id/Dashboard_btn_bloodPressure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="@color/Home_Page_Layout_CardView_Title"
                        android:text="@string/Dashboard_btn_bloodPressure"
                        android:textSize="@dimen/HomePageLayout_CardView_Title_TextSize"
                        android:clickable="false"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/DashboardPageLayout_CardView_Calories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/Dashboard_CardView_Margin"
                app:cardCornerRadius="@dimen/Dashboard_CardView_redius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="@dimen/Dashboard_ImageView_Width"
                        android:layout_height="@dimen/Dashboard_ImageView_Height"
                        android:src="@drawable/calories"
                        android:scaleType="fitXY"
                        android:padding="@dimen/Dashboard_ImageView_Padding"
                        />

                    <Button
                        android:id="@+id/Dashboard_btn_calories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="@color/Home_Page_Layout_CardView_Title"
                        android:text="@string/Dashboard_btn_calories"
                        android:textSize="@dimen/HomePageLayout_CardView_Title_TextSize"
                        android:clickable="false"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/DashboardPageLayout_CardView_MedicationSchedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/Dashboard_CardView_Margin"
                app:cardCornerRadius="@dimen/Dashboard_CardView_redius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="@dimen/Dashboard_ImageView_Width"
                        android:layout_height="@dimen/Dashboard_ImageView_Height"
                        android:src="@drawable/medication_schedule"
                        android:scaleType="fitXY"
                        android:padding="@dimen/Dashboard_ImageView_Padding"
                        />

                    <Button
                        android:id="@+id/Dashboard_btn_Medication_Schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="@color/Home_Page_Layout_CardView_Title"
                        android:text="@string/Dashboard_btn_medication_schedule"
                        android:textSize="@dimen/HomePageLayout_CardView_Title_TextSize"
                        android:clickable="false"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>