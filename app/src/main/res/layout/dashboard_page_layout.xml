<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Dashboard_btn_medicine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/dashboard_button_boarder"
            android:textColor="@color/MainView_CardView_Title"
            android:text="@string/Dashboard_bnt_medicine"
            android:textSize="@dimen/MainView_CardView_Title_TextSize"
            />

        <Button
            android:id="@+id/Dashboard_btn_illness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/dashboard_button_boarder"
            android:textColor="@color/MainView_CardView_Title"
            android:text="@string/Dashboard_bnt_illness"
            android:textSize="@dimen/MainView_CardView_Title_TextSize"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Dashboard_btn_Medication_Schedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/dashboard_button_boarder"
            android:textColor="@color/MainView_CardView_Title"
            android:text="@string/Dashboard_bnt_medication_schedule"
            android:textSize="@dimen/MainView_CardView_Title_TextSize"
            />

    </LinearLayout>

</LinearLayout>