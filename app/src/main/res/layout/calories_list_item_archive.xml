<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/Calories_List_Item_padding">

    <TextView
        android:id="@+id/Calories_Archive_List_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:textColor="@color/Calories_List_Item_textcolor"
        android:textSize="@dimen/Calories_List_Title_text_size"
        android:text="name"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/Calories_Archive_List_item_iv_remove_from_archive"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="0.1"
            android:src="@drawable/remove"
            android:onClick="remove_from_archive"
            android:padding="2dp"
            />

        <TextView
            android:id="@+id/Calories_Archive_List_item_calories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/Calories_List_Item_textcolor"
            android:textSize="@dimen/Calories_List_SubTitle_text_size"
            android:text="calories"
            />

        <TextView
            android:id="@+id/Calories_Archive_List_item_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/Calories_List_Item_textcolor"
            android:textSize="@dimen/Calories_List_SubTitle_text_size"
            android:text="amount"
            />

    </LinearLayout>

</LinearLayout>