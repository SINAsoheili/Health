<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet
        android:id="@+id/start">

        <Constraint
            android:id="@id/profile_view_background"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />

        <Constraint
            android:id="@id/profile_imageview_avatar"
            android:layout_width="250dp"
            android:layout_height="250dp"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="@id/profile_view_background"
            android:layout_marginTop="150dp"
            />

        <Constraint
            android:id="@id/profile_LinearLayout_continer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/profile_imageview_avatar"
            motion:layout_constraintVertical_bias="0"
            />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end">

        <Constraint
            android:id="@id/profile_view_background"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />

        <Constraint
            android:id="@id/profile_imageview_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintHorizontal_bias="0.1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.1"
            android:layout_marginBottom="150dp"
            />

        <Constraint
            android:id="@id/profile_LinearLayout_continer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/profile_imageview_avatar"
            motion:layout_constraintVertical_bias="0"
            />

    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@id/start"
        motion:constraintSetEnd="@id/end"
        motion:duration="1000">

        <OnSwipe
            motion:moveWhenScrollAtTop="true"
            motion:touchAnchorId="@id/profile_view_background"
            />

    </Transition>

</MotionScene>